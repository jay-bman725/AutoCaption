{
  "name": "autocaption",
  "version": "1.1.1",
  "description": "Automatic caption generation app using OpenAI Whisper",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "captions",
    "whisper",
    "openai",
    "srt"
  ],
  "author": "Jay Berryman <jay@jaysapps.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^4.24.0"
  },
  "build": {
    "appId": "com.jaysapps.autocaption",
    "productName": "AutoCaption",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
